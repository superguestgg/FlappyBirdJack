    method int pipeHeightByNumber(int number){
        var int height;
        let height = number*ceed*10+70;
        while (height > 20000){
            let height = height - 20000;
        }
        while (height > 4000){
            let height = height - 4000;
        }
        while (height > 175){
            let height = height - 175;
        }
        if (height < 50){
            let height = 50;
        }
        return height;
    }

